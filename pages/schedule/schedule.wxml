<!--index.wxml-->
<view class="container schedule">
  <view class="no-touched touche-box"
     wx:if="{{inputFalg}}"
     bindtouchstart ="toucheInput">
    <view class="no-touched-input">
        <image src="../../image/after-class-icon.png"></image>
        <text>搜索</text>
    </view>
  </view>
  <view class="touched touche-box clearfix"
     wx:if="{{!inputFalg}}">
    <view class="touche-input fl">
      <image 
        class="search"
        src="../../image/after-class-icon.png"></image>
      <input placeholder="搜索" 
         class="" 
         placeholder-class=""/>
         <image 
            class="del"
            src="../../image/after-class-icon.png"></image>
    </view>
    <view class="input-canel fr"
       bindtouchstart ="toucheInputCanel">取消</view>
  </view>
  <view class="schedule-filter">
    <view class="classname">
        <text 
          data-type="1"
          bindtouchstart="filterList">{{schoolFilter.title}}</text> 
      </view>
      <view class="filter-list"
          wx:if="{{schoolFlag}}">
          <view 
             bindtouchstart="lessonList"
             data-index="{{item}}"
             wx:for="{{schoolData}}"
             wx:key="" class="{{item.classname}}">{{item.title}}</view>
        </view>
    <view class="classname">
      <text 
          data-type="2"
          bindtouchstart="filterList">{{lessonFilter.title}}</text>
    </view>
    <view class="filter-list"
        wx:if="{{lessonFlag}}">
        <view data-index="{{item}}"
             bindtouchstart="lessonList"
             wx:for="{{lessonData}}"
             wx:key="" class="{{item.classname}}">{{item.title}}</view>
      </view>
    <view class="classname">
      <text
         data-type="3"
          bindtouchstart="filterList">{{intelligenFilter.title}}</text> 
      </view>
   <view class="filter-list"
         wx:if="{{intelligenFlag}}">
       <view data-index="{{item}}"
             bindtouchstart="lessonList"
             wx:for="{{intelligenData}}"
             wx:key="" class="{{item.classname}}">{{item.title}}</view>
       </view>
    </view>
  <view class="school-list">
    <scroll-view scroll-y="true" style="height:1024rpx" bindscrolltolower="lower">
        <view class="{{bgdisplayclass}}"></view>
    <view class="lesson-list clearfix" wx:for="{{schedule_list}}">
        <image src="{{item.image}}"></image>
        <view class="lesson-list-text">
            <text class="className">{{item.course}}</text>
            <text class="classCount">{{item.semester}}第{{item.class_number}}次/{{item.teacher}}</text>
            <text class="classAddress">{{item.school}}</text>
            <text class="classTime">上课时间：{{item.date}} {{item.timerange}}</text>
        </view>
    </view>
    </scroll-view>
  </view>
</view>
