.container{
  width: 100%;
  height: 100%;
  background: #e8e8e8;
  position: fixed;
   transition: background 0.5s;
      -webkit-transition: background  0.5s;
}
.container >view{
  text-align: center;
  font-size: 36rpx;
  color: #666;
  margin-top: 100rpx;
}
.container>image{
  display: block;
  overflow: hidden;
  margin: 20rpx  auto;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  opacity: 0.8;
}