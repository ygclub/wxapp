<!--index.wxml-->

<view class="coordinate">
  <view class="coordinate-school">
    <view class="coordinate-school-item clearfix"
          wx:for="{{listDatas}}" 
          wx:for-index="idx"
          wx:for-item="list"
          bindtap="toModule"
          data-tab="{{list.id}}">
        <text class="school fl">{{list.schoolname}}</text>
        <text class="address fl">{{list.address}}</text>
        <text class="distance fr">{{list.dis}}</text>
    </view>
  </view>
  <map id="myMap" 
       markers="{{markers}}"
       style="width:100%;height:100%;"
       scale="10"
       bindmarkertap="toSchool"
       show-location/>
</view>


