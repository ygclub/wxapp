.coordinate{
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rbga(53,53,53,0.04)
}
.coordinate-school{
  max-height: 285rpx;
  overflow-y: scroll;
  width: 100%;
}
.coordinate-school>.coordinate-school-item{
  height: 28rpx;
  line-height: 28rpx; 
  padding:35rpx 0 35rpx 0;
  margin-left: 30rpx;
  margin-right: 32rpx;
  border-bottom: 2rpx solid #ededed;
}

.coordinate-school-item> .school{
  font-size:28rpx;
  color:#353535;
  letter-spacing:0;
  text-align:left;
  margin-right: 21rpx;
}
.coordinate-school-item> .address{
  font-size:24rpx;
  color:#999999;
  letter-spacing:0;
  text-align:left;
}
.coordinate-school-item> .distance{
  font-size:24rpx;
  color:#666666;
  letter-spacing:0;
  text-align:right;
}
